{
	"compilerOptions": {
		"allowJs": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true,
		"esModuleInterop": true,
		"moduleDetection": "force",
		"strict": true,
		"moduleResolution": "Bundler",
		"module": "Preserve",
		"noEmit": true,
		"outDir": "dist",
		"declaration": false,
		"declarationMap": false,
		"baseUrl": ".",
		"sourceMap": true,
		"inlineSources": true,
		"target": "ES6",
		"noImplicitAny": true,
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["**/*.ts"]
}
